{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist",
        "buildCommand": "npm run client:build"
      }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/$1" },
    { "src": "^/(.*)$", "dest": "/client/dist/$1" },
    { "src": "^/$", "dest": "/client/dist/index.html" }
  ]
}
