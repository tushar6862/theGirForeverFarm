{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/$1" },
    { "src": "^/(.*)$", "dest": "/dist/public/$1" },
    { "src": "^/$", "dest": "/dist/public/index.html" }
  ]
}
